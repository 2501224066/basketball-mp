page {
  background: #fff !important;
}

.box {
  padding: 0 30rpx;
}

.card {
  background: #fff;
  margin-top: 30rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0px 3px 12px rgba(0, 0, 0, 0.08);
}

.card-img {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.card-img image {
  width: 100%;
  height: 100%;
}

.card-body {
  padding: 10rpx 30rpx;
  background: #fff;
}

.card-body>view {
  padding: 4rpx 0;
  color: #999;
}

.card-body text {
  margin-right: 10rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333 !important;
}

.card-price {
  color: #E02020;
  font-size: 30rpx;
  font-weight: 500;
}

.card-footer {
  padding: 20rpx 30rpx;
  text-align: center;
  font-size: 35rpx;
  color: #fff;
  background: rgb(48,125,248);
  font-weight: 500;
}