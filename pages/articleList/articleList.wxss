page{
  background: #fff !important;
}

.box{
  padding: 20rpx 30rpx 0 30rpx;
}

.box-content {
  box-shadow: 0px 3px 12px rgba(0, 0, 0, 0.08);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.vi {
  width: 100%;
  height: 310rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.vi video,
.vi image {
  width: 100%;
  height: 100%;
}

.box-title {
  color: #333;
  font-size: 32rpx;
  padding: 20rpx;
}
