page {
  background: #fff !important;
}

.box {
  padding: 0 30rpx;
}

.box-man {
  display: flex;
  margin-top: 30rpx;
}

.header {
  width: 202rpx;
  height: 235rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.header image {
  width: 100%;
  height: 100%;
}

.man {
  flex: 1;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.man-1 {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.man-1>view:nth-child(1) {
  font-size: 34rpx;
  font-weight: 500;
}

.man-2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #6D7278;
  margin: 10rpx 0;
}

.man-2>view {
  width: 50%;
  text-align: left;
}

.man-where {
  font-style: oblique;
  font-weight: 900;
  font-size: 60rpx;
  color: #ebebeb;
}

.label {
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  background: #fff;
  margin-top: 30rpx;
}

.label-line {
  width: 8rpx;
  height: 40rpx;
  margin-right: 20rpx;
  border-radius: 4rpx;
  background: #FDD430;
}

.label text{
  flex: 1;
  text-align: right;
}

.vi {
  width: 100%;
  height: 310rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.vi video,
.vi image {
  width: 100%;
  height: 100%;
}

.box-content {
  box-shadow: 0px 3px 12px rgba(0, 0, 0, 0.08);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}