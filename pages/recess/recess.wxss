page {
  background: #fff !important;
}

.box {
  padding: 0 30rpx;
}

.title {
  padding: 20rpx 0;
  font-size: 40rpx;
  color: #333;
}

.title>span {
  color: #E02020;
  margin-right: 10rpx;
}

textarea {
  width: 100%;
  height: 300rpx;
  border: 1rpx solid #ebebeb;
  border-radius: 8rpx;
  padding: 20rpx;
}

.sub {
  margin-top: 8vh;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  background: #FAD55B;
  color: #333;
  font-size: 36rpx;
  font-weight: 500;
}

.img-box{
  padding: 0 15rpx;
}

.img{
  display: flex;
  flex-wrap: wrap;
}

.img>view{
  margin: 0 15rpx 30rpx 15rpx;
  width: 150rpx;
  height: 150rpx;
}

.img image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.img-add{
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1rpx dashed #666;
  box-sizing: border-box;
  color: #666;
  font-size: 24rpx;
}

.img-add>view:nth-child(1){
  font-size: 60rpx;
  margin-bottom: 6rpx;
}